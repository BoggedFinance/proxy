    struct CoreStorage {
        address owner;
        bool paused;
        bool guardReentrancy;
        mapping (bytes4 => address) implementations;
    }
    function coreStorage() internal pure returns (CoreStorage storage cs) {
        bytes32 location = keccak256("bogged.proxy.core");
        assembly { cs.slot := location }
    }
}
